			.project__image.project__image--multi-holder
				img(src="/img/multi-image-holder.png")
				.project__image--multiple
					img.rellax(
						src="/img/phi-internal.jpg"
						data-rellax-speed="-1"
						data-rellax-percentage="0.5"
					)
