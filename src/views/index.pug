extends /layouts/_main.pug

block bodyClass
	- const bodyClass = 'home'

block content
	section.hero.decorated
		.hero__wrapper
			.hero__info
				h1.hero__head I’m an interactive art director focused on #[span.hero__head--strong nonprofits], #[span.hero__head--strong foundations] and #[span.hero__head--strong news & editorial sites].
				h2.hero__subhead My work includes web, print & identity design, user experience & illustration.
			.hero__imagecont
				img.hero__image.rellax(
					src="/img/iphone-fpo.png"
					data-rellax-speed="3.5"
					data-rellax-percentage="0.5"
				)
	section.project.project--1a
		.project__wrapper
			.project__info
				h1.project__head Drug Policy Alliance Annual Report
				p.project__copy Print and digital annual reports&mdash;a bright and bold look for the nation's leading advocate for sensible drug policies.
				a.link.link--arrow.animsition-link(href="dpa-nonprofit-digital-annual-report.html") Case Study
				blockquote.project__quote &ldquo;Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nunc ac ipsum augue.&rdquo;
				cite.project__citation Jag Davies, Director of Communications Strategy
			.project__image.project__image--single
				img.rellax(
					src="/img/dpa-digital.gif"
					data-rellax-speed="-2"
					data-rellax-percentage="0.5"
				)

	section.project.project--1b
		.project__wrapper
			.project__info
				h1.project__head PHI Website
				p.project__copy PHI works to improve the quality of residential care by improving the lives of the workers who provide that care. Their new site is a destination for up-to-date data on care worker demographics, wages and labor conditions.
